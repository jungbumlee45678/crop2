<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="94dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:background="@drawable/app_background"
        android:gravity="center_vertical|center_horizontal"
        android:text="UT"
        android:textSize="40dp" />

    <!--
    layout_centerHorizontal - 수평 정렬
    background - 배경
    -->

    <View
        android:layout_width="329dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="240dp"
        android:background="@color/red" />

    <EditText
        android:id="@+id/User_id"
        android:layout_width="315dp"
        android:layout_height="35dp"

        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="280dp"

        android:background="@drawable/text_bar"
        android:ems="10"
        android:hint="ID"
        android:inputType="text"
        android:paddingStart="20dp"
        android:textSize="23dp" />

    <EditText
        android:id="@+id/User_pw"
        android:layout_width="315dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"

        android:layout_alignParentTop="true"
        android:layout_marginTop="330dp"

        android:background="@drawable/text_bar"
        android:ems="10"
        android:hint="PW"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/findid"
        android:layout_width="88dp"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_marginTop="390dp"

        android:layout_toStartOf="@+id/view_l"
        android:layout_marginEnd="10dp"

        android:gravity="center_vertical|center_horizontal"
        android:includeFontPadding="false"
        android:text="아이디 찾기"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/findpw"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        android:gravity="center_vertical|center_horizontal"
        android:includeFontPadding="false"
        android:text="비밀번호 찾기"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/Sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_marginTop="390dp"

        android:layout_toEndOf="@+id/view_r"
        android:layout_marginStart="10dp"

        android:gravity="center_vertical|center_horizontal"
        android:includeFontPadding="false"
        android:text="회원 가입"
        android:textSize="14dp" />

    <View
        android:id="@+id/view_l"
        android:layout_width="3dp"
        android:layout_height="26dp"

        android:layout_alignParentTop="true"
        android:layout_marginTop="390dp"

        android:layout_marginEnd="10dp"

        android:layout_toStartOf="@id/findpw"
        android:background="@color/red" />

    <View
        android:id="@+id/view_r"
        android:layout_width="3dp"
        android:layout_height="26dp"

        android:layout_alignParentTop="true"
        android:layout_marginTop="390dp"

        android:layout_marginStart="10dp"

        android:layout_toEndOf="@id/findpw"
        android:background="@color/red" />

    <Button
        android:id="@+id/Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"

        android:layout_alignParentTop="true"
        android:layout_marginTop="430dp"

        android:background="@drawable/text_bar"

        android:text="로그인" />

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"

        android:layout_alignParentTop="true"
        android:layout_marginTop="600dp"

        android:layout_toLeftOf="@id/Login"
        android:layout_marginEnd="60dp"

        android:text="TextView" />
</RelativeLayout>